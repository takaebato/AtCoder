{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "AtCoder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out",
            "args": ["<", "${workspaceFolder}/in"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}
